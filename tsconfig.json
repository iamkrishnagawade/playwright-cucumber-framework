{
  "compilerOptions": {
    /* Base Options */
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true, 
    "strictNullChecks": true,
    "skipLibCheck": true,
    
    /* Emit */
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    
    /* Interop */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    
    /* Playwright & Cucumber support */
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "step-definitions/**/*.ts",
    "support/**/*.ts",
    "pages/**/*.ts",
    "features/**/*.ts"
  ],
  "exclude": ["node_modules"]
}